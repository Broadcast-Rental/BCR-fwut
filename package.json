{
  "name": "firmware-uploader",
  "version": "2.0.0-rc.4",
  "description": "Simple tool for uploading firmware to ESP32, Arduino, and other microcontroller devices",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "release": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "node scripts/bundle-esptool.js"
  },
  "keywords": [
    "firmware",
    "esp32",
    "arduino",
    "microcontroller",
    "uploader"
  ],
  "author": "Broadcast Rental",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.broadcastrental.firmwareuploader",
    "productName": "Firmware Uploader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build-tools/assets/**/*",
      "node_modules/**/*",
      "!node_modules/.bin/**/*",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "build-tools/assets/",
        "to": "assets/"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build-tools/assets/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-tools/entitlements.plist",
      "entitlementsInherit": "build-tools/entitlements.plist"
    },
    "win": {
      "icon": "build-tools/assets/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Broadcast Rental"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
